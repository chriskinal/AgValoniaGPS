<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dock Panel Container Styles - Match bar background (#C0C0D0 lavender) -->
    <Style Selector="Grid.DockPanel, StackPanel.DockPanel">
        <Setter Property="Background" Value="#C0C0D0"/>
    </Style>

    <!-- Static Icon Bar Button Styles - Override Fluent theme with #1a1a1a background -->
    <Style Selector="Border > StackPanel > Button">
        <Setter Property="Background" Value="#1a1a1a"/>
    </Style>

    <Style Selector="Border > StackPanel > Button:pointerover">
        <Setter Property="Background" Value="#2a2a2a"/>
    </Style>

    <Style Selector="Border > StackPanel > Button:pressed">
        <Setter Property="Background" Value="#0a0a0a"/>
    </Style>

    <!-- Dock Button Base Style (60x60px with icon + text) - Match bar background -->
    <Style Selector="Button.DockButton">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Background" Value="#C0C0D0"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Dock Button Hover State - Subtle highlight -->
    <Style Selector="Button.DockButton:pointerover">
        <Setter Property="Background" Value="#D0D0E0"/>
    </Style>

    <!-- Dock Button Pressed State -->
    <Style Selector="Button.DockButton:pressed">
        <Setter Property="Background" Value="#B0B0C0"/>
    </Style>

    <!-- Dock Button Active/Selected State - Blue highlight like old AgOpen -->
    <Style Selector="Button.DockButton.Active">
        <Setter Property="Background" Value="#3498DB"/>
    </Style>

    <Style Selector="Button.DockButton.Active:pointerover">
        <Setter Property="Background" Value="#2980B9"/>
    </Style>

    <!-- Status Indicator Styles (Red/Yellow/Green) -->
    <Style Selector="Border.StatusRed">
        <Setter Property="Background" Value="#E74C3C"/>
    </Style>

    <Style Selector="Border.StatusYellow">
        <Setter Property="Background" Value="#F39C12"/>
    </Style>

    <Style Selector="Border.StatusGreen">
        <Setter Property="Background" Value="#27AE60"/>
    </Style>

    <!-- Dock Button with Status Indicator -->
    <Style Selector="Button.DockButton > StackPanel">
        <Setter Property="Spacing" Value="2"/>
    </Style>

    <!-- Status Indicator Dot (small badge on button) -->
    <Style Selector="Ellipse.StatusIndicator">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <!-- Dock Button Image (48x48px icon) -->
    <Style Selector="Button.DockButton Image">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
    </Style>

    <!-- Dock Button Text (10pt font) -->
    <Style Selector="Button.DockButton TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Disabled Button State -->
    <Style Selector="Button.DockButton:disabled">
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- Navigation Panel Button Styles (for floating navigation panel) -->
    <Style Selector="Button.NavButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Navigation Button Hover State -->
    <Style Selector="Button.NavButton:pointerover">
        <Setter Property="Background" Value="#E0E0E0"/>
    </Style>

    <!-- Navigation Button Pressed State -->
    <Style Selector="Button.NavButton:pressed">
        <Setter Property="Background" Value="#D0D0D0"/>
    </Style>

    <!-- Navigation Button Active State -->
    <Style Selector="Button.NavButton.Active">
        <Setter Property="Background" Value="#C0C0C0"/>
    </Style>

    <Style Selector="Button.NavButton.Active:pointerover">
        <Setter Property="Background" Value="#B0B0B0"/>
    </Style>

</Styles>
