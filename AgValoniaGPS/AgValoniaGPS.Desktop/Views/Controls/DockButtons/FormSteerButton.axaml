<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AgValoniaGPS.Desktop.Views.Controls.DockButtons.FormSteerButton"
             Width="60" Height="60">
    <Button Classes="DockButton" Width="60" Height="60" Click="OnButtonClick">
        <StackPanel>
            <Grid Width="48" Height="48">
                <Image Source="/Assets/Icons/AutoSteerConf.png" Width="48" Height="48"/>
                <!-- Status indicator (AutoSteer active/inactive) -->
                <Ellipse x:Name="StatusIndicator"
                         Width="12" Height="12"
                         Fill="Gray"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Margin="0,2,2,0"/>
            </Grid>
            <TextBlock Text="Steer" FontSize="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
