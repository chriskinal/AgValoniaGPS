<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AgValoniaGPS.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="AgValoniaGPS.Desktop.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AgValoniaGPS - Greenfield"
        Width="1024" Height="768">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <TextBlock Text="AgValoniaGPS - Greenfield .NET 8"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
                <TextBlock Text="GPS Status" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

                <Border BorderBrush="#3498DB" BorderThickness="2" CornerRadius="8" Padding="20" MinWidth="450">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Network" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="UDP Status:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding NetworkStatus}"/>
                        </StackPanel>

                        <Separator/>

                        <TextBlock Text="Module Connections" FontWeight="Bold" FontSize="16"/>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="AutoSteer:" FontWeight="Bold" Width="140"/>
                            <Ellipse Width="12" Height="12" Fill="{Binding IsAutoSteerDataOk, Converter={StaticResource BoolToColorConverter}}"/>
                            <TextBlock Text="{Binding IsAutoSteerDataOk, Converter={StaticResource BoolToStatusConverter}}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Machine:" FontWeight="Bold" Width="140"/>
                            <Ellipse Width="12" Height="12" Fill="{Binding IsMachineDataOk, Converter={StaticResource BoolToColorConverter}}"/>
                            <TextBlock Text="{Binding IsMachineDataOk, Converter={StaticResource BoolToStatusConverter}}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="IMU:" FontWeight="Bold" Width="140"/>
                            <Ellipse Width="12" Height="12" Fill="{Binding IsImuDataOk, Converter={StaticResource BoolToColorConverter}}"/>
                            <TextBlock Text="{Binding IsImuDataOk, Converter={StaticResource BoolToStatusConverter}}"/>
                        </StackPanel>

                        <Separator/>

                        <TextBlock Text="GPS Data" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Status:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding StatusMessage}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Fix Quality:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding FixQuality}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Satellites:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding SatelliteCount}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Latitude:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding Latitude, StringFormat='{}{0:F6}°'}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Longitude:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding Longitude, StringFormat='{}{0:F6}°'}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Speed:" FontWeight="Bold" Width="140"/>
                            <TextBlock Text="{Binding Speed, StringFormat='{}{0:F2} m/s'}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <StackPanel>
                <TextBlock Text="Modern Avalonia UI with .NET 8 | MVVM + ReactiveUI"
                           Foreground="White"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding DebugLog}"
                           Foreground="Yellow"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
