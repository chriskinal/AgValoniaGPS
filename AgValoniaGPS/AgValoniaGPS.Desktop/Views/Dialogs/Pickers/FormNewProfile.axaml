<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.Pickers"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.Pickers.FormNewProfile"
        x:DataType="vm:NewProfileViewModel"
        Title="New Profile"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        Background="#2C3E50"
        CanResize="False">

    <Window.Styles>
        <Style Selector="Button.ModernButton">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.ModernButton:pointerover">
            <Setter Property="Background" Value="#2980B9"/>
        </Style>
        <Style Selector="Button.ModernButton:disabled">
            <Setter Property="Background" Value="#7F8C8D"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#7F8C8D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,20">
            <TextBlock Text="Create New Profile" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Enter a name and description for the new profile"
                       Foreground="#BDC3C7" FontSize="14"/>
        </StackPanel>

        <!-- Form Fields -->
        <Border Grid.Row="1"
                Background="#34495E"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <StackPanel Spacing="15">
                <!-- Profile Name -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Profile Name *"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ProfileName}"
                             Watermark="Enter profile name..."
                             MinHeight="44"/>
                    <TextBlock Text="Required. Must be unique and contain only valid filename characters."
                               Foreground="#95A5A6"
                               FontSize="11"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Description"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Description}"
                             Watermark="Enter description (optional)..."
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             MinHeight="80"
                             MaxHeight="120"/>
                </StackPanel>

                <!-- Profile Type -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Profile Type *"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <StackPanel Spacing="10">
                        <RadioButton Content="Vehicle Profile"
                                     IsChecked="{Binding IsVehicleProfile}"
                                     MinHeight="44">
                            <RadioButton.ToolTip>
                                <ToolTip>
                                    <TextBlock Text="Configuration for a specific vehicle or tractor"/>
                                </ToolTip>
                            </RadioButton.ToolTip>
                        </RadioButton>
                        <RadioButton Content="User Profile"
                                     IsChecked="{Binding IsUserProfile}"
                                     MinHeight="44">
                            <RadioButton.ToolTip>
                                <ToolTip>
                                    <TextBlock Text="Configuration for a specific user or operator"/>
                                </ToolTip>
                            </RadioButton.ToolTip>
                        </RadioButton>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}"
                   Foreground="#E74C3C"
                   FontSize="14"
                   Margin="0,0,0,10"
                   IsVisible="{Binding HasError}"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto">
            <TextBlock Grid.Column="0"
                       Text="* Required fields"
                       Foreground="#95A5A6"
                       FontSize="11"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    Classes="ModernButton"
                    Content="Create"
                    Command="{Binding OKCommand}"
                    IsEnabled="{Binding IsValid}"
                    Margin="0,0,10,0"/>
            <Button Grid.Column="2"
                    Classes="ModernButton"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</Window>
