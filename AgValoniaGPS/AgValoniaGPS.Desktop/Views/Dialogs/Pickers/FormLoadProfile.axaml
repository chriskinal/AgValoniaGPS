<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.Pickers"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="550"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.Pickers.FormLoadProfile"
        x:DataType="vm:LoadProfileViewModel"
        Title="Load Profile"
        Width="650" Height="550"
        WindowStartupLocation="CenterOwner"
        Background="#2C3E50"
        CanResize="True">

    <Window.Styles>
        <Style Selector="Button.ModernButton">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.ModernButton:pointerover">
            <Setter Property="Background" Value="#2980B9"/>
        </Style>
        <Style Selector="Button.ModernButton:disabled">
            <Setter Property="Background" Value="#7F8C8D"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <Style Selector="Button.DangerButton">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.DangerButton:pointerover">
            <Setter Property="Background" Value="#C0392B"/>
        </Style>
        <Style Selector="Button.DangerButton:disabled">
            <Setter Property="Background" Value="#7F8C8D"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#3498DB"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#34495E"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,15">
            <TextBlock Text="Load Profile" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Select a profile to load or browse for a profile file"
                       Foreground="#BDC3C7" FontSize="14"/>
        </StackPanel>

        <!-- Profiles List and Preview -->
        <Grid Grid.Row="1" ColumnDefinitions="*,280" Margin="0,0,0,15">
            <!-- Profiles List -->
            <Border Grid.Column="0"
                    Background="#34495E"
                    CornerRadius="8"
                    Padding="1"
                    Margin="0,0,10,0">
                <ScrollViewer>
                    <ListBox ItemsSource="{Binding Profiles}"
                             SelectedItem="{Binding SelectedProfile}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:ProfileInfo">
                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                    <!-- Icon -->
                                    <TextBlock Grid.Column="0" Grid.RowSpan="2"
                                               Text="{Binding Icon}"
                                               FontSize="32"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>

                                    <!-- Name -->
                                    <TextBlock Grid.Column="1" Grid.Row="0"
                                               Text="{Binding Name}"
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Last Modified -->
                                    <TextBlock Grid.Column="1" Grid.Row="1"
                                               Foreground="#BDC3C7"
                                               FontSize="12">
                                        <Run Text="Modified: "/>
                                        <Run Text="{Binding LastModifiedString}"/>
                                    </TextBlock>

                                    <!-- Profile Type -->
                                    <Border Grid.Column="2" Grid.RowSpan="2"
                                            Background="#2C3E50"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ProfileType}"
                                                   Foreground="White"
                                                   FontSize="11"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

            <!-- Profile Preview Panel -->
            <Border Grid.Column="1"
                    Background="#34495E"
                    CornerRadius="8"
                    Padding="15">
                <Grid>
                    <!-- Details Panel -->
                    <StackPanel Spacing="15" IsVisible="{Binding HasSelection}">
                        <TextBlock Text="Profile Details"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Name:" Foreground="#95A5A6" FontSize="12"/>
                            <TextBlock Text="{Binding SelectedProfile.Name}"
                                       Foreground="White"
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Type:" Foreground="#95A5A6" FontSize="12"/>
                            <TextBlock Text="{Binding SelectedProfile.ProfileType}"
                                       Foreground="White"
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Description:" Foreground="#95A5A6" FontSize="12"/>
                            <TextBlock Text="{Binding SelectedProfile.Description}"
                                       Foreground="White"
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Last Modified:" Foreground="#95A5A6" FontSize="12"/>
                            <TextBlock Text="{Binding SelectedProfile.LastModifiedString}"
                                       Foreground="White"
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="File Size:" Foreground="#95A5A6" FontSize="12"/>
                            <TextBlock Text="{Binding SelectedProfile.FileSize}"
                                       Foreground="White"
                                       FontSize="14"/>
                        </StackPanel>

                        <Separator Background="#7F8C8D" Margin="0,10"/>

                        <Button Classes="DangerButton"
                                Content="Delete Profile"
                                Command="{Binding DeleteProfileCommand}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- No Selection Message -->
                    <TextBlock Text="Select a profile to view details"
                               Foreground="#95A5A6"
                               FontSize="14"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               IsVisible="{Binding !HasSelection}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Error Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}"
                   Foreground="#E74C3C"
                   FontSize="14"
                   Margin="0,0,0,10"
                   IsVisible="{Binding HasError}"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" ColumnDefinitions="Auto,*,Auto,Auto">
            <Button Grid.Column="0"
                    Classes="ModernButton"
                    Content="Load from File..."
                    Command="{Binding LoadFromFileCommand}"
                    Margin="0,0,10,0"/>

            <Button Grid.Column="2"
                    Classes="ModernButton"
                    Content="Load"
                    Command="{Binding OKCommand}"
                    Margin="0,0,10,0"/>
            <Button Grid.Column="3"
                    Classes="ModernButton"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</Window>
