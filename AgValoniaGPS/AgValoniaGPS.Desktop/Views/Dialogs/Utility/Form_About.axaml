<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.Utility"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.Utility.Form_About"
        x:DataType="vm:AboutViewModel"
        Title="About AgValoniaGPS"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock Text="{Binding ApplicationName}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding FullVersionString}" FontSize="16" HorizontalAlignment="Center" Foreground="Gray"/>
            
            <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="0,16,0,0" Margin="0,16,0,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="Description" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Copyright" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding Copyright}" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="License" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding License}" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Credits" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding Credits}" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Website" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <Button Content="{Binding Website}" Command="{Binding OpenWebsiteCommand}" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" IsVisible="{Binding HasError}"/>

            <Button Content="OK" Command="{Binding OKCommand}" Width="100" Height="36" HorizontalAlignment="Center" Margin="0,16,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Window>
