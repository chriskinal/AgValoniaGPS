<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.Utility"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.Utility.FormTimedMessage"
        x:DataType="vm:TimedMessageViewModel"
        Title="Notification"
        Width="400" Height="180"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid RowDefinitions="*,Auto,Auto">
        <StackPanel Grid.Row="0" Margin="16" Spacing="12" VerticalAlignment="Center">
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="14" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding CountdownText}" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="16,0,16,8" HorizontalAlignment="Center" IsVisible="{Binding HasError}"/>

        <Button Grid.Row="2" Content="Close Now" Command="{Binding CloseNowCommand}" Width="100" Height="36" HorizontalAlignment="Center" Margin="16"/>
    </Grid>
</Window>
