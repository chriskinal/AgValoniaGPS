<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.FieldManagement"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.FieldManagement.FormAgShareDownloader"
        x:DataType="vm:AgShareDownloaderViewModel"
        Title="AgShare Cloud Downloader"
        Width="700" Height="550"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="16">
        <TextBlock Grid.Row="0" Text="AgShare Cloud Field Downloader" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

        <!-- Login Section -->
        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="120,*" ColumnSpacing="8" RowSpacing="8" Margin="0,0,0,16">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Server URL:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ServerURL}" Height="36"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Username}" Height="36"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Password}" PasswordChar="*" Height="36"/>

            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Connect" Command="{Binding ConnectCommand}" Width="100" Height="36"/>
                <Button Content="Disconnect" Command="{Binding DisconnectCommand}" Width="100" Height="36"/>
                <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" Margin="16,0,0,0" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- Fields List -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="16">
            <ListBox Grid.Column="0" ItemsSource="{Binding AvailableFields}" SelectedItem="{Binding SelectedField}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="vm:CloudField">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding AreaHectares, StringFormat='Area: {0:F2} ha'}" FontSize="12"/>
                            <TextBlock Text="{Binding DateUploaded, StringFormat='Uploaded: {0:yyyy-MM-dd}'}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Column="1" Spacing="8">
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Width="120" Height="36"/>
                <Button Content="Download" Command="{Binding DownloadCommand}" Width="120" Height="36"/>
            </StackPanel>
        </Grid>

        <!-- Download Progress -->
        <StackPanel Grid.Row="3" Margin="0,12" IsVisible="{Binding IsBusy}">
            <TextBlock Text="Downloading..." Margin="0,0,0,4"/>
            <ProgressBar Value="{Binding DownloadProgress}" Maximum="100" Height="20"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="4" Content="Close" Command="{Binding CancelCommand}" Width="100" Height="36" HorizontalAlignment="Right" Margin="0,8,0,0"/>
    </Grid>
</Window>
