<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.FieldManagement"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.FieldManagement.FormFieldISOXML"
        x:DataType="vm:FieldISOXMLViewModel"
        Title="Import ISOXML Field"
        Width="600" Height="450"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="Auto,*,Auto" Margin="16">
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="ISOXML File" FontWeight="Bold" FontSize="16"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" Text="{Binding ISOXMLFilePath}" IsReadOnly="True" Height="36"/>
                <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseCommand}" Width="100" Height="36" Margin="8,0,0,0"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="16" Margin="0,16">
            <ListBox Grid.Column="0" Items="{Binding ISOFields}" SelectedItem="{Binding SelectedField}" Height="280">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding AreaHectares, StringFormat='{}{0:F2} ha'}" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="12">
                <TextBlock Text="{Binding PreviewText}" TextWrapping="Wrap"/>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Import" Command="{Binding ImportCommand}" Width="100" Height="36"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Height="36"/>
        </StackPanel>
    </Grid>
</Window>
