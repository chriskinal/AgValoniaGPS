<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgValoniaGPS.ViewModels.Dialogs.FieldManagement"
        xmlns:models="using:AgValoniaGPS.Models"
        x:Class="AgValoniaGPS.Desktop.Views.Dialogs.FieldManagement.FormFlags"
        x:DataType="vm:FlagsViewModel"
        Title="Flag Management"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="16">
        <TextBlock Grid.Row="0" Text="Field Flags" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

        <TextBox Grid.Row="1" Text="{Binding SearchText}" Watermark="Search flags..." Height="36" Margin="0,0,0,12"/>

        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="16">
            <ListBox Grid.Column="0" ItemsSource="{Binding FilteredFlags}" SelectedItem="{Binding SelectedFlag}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="models:FieldFlag">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="16" Height="16" Background="{Binding ColorHex}" CornerRadius="8"/>
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Column="1" Spacing="8">
                <Button Content="Add" Command="{Binding AddFlagCommand}" Width="120" Height="36"/>
                <Button Content="Edit" Command="{Binding EditFlagCommand}" Width="120" Height="36"/>
                <Button Content="Delete" Command="{Binding DeleteFlagCommand}" Width="120" Height="36"/>
                <Button Content="Clear All" Command="{Binding ClearAllCommand}" Width="120" Height="36"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
            <Button Content="Close" Command="{Binding OKCommand}" Width="100" Height="36"/>
        </StackPanel>
    </Grid>
</Window>
